{
  "name": "sqlite-cloud-backup",
  "version": "0.1.2",
  "type": "module",
  "description": "Lightweight SQLite database synchronization to Google Drive with zero vendor lock-in",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "npm run build",
    "publish:patch": "node scripts/publish.js patch",
    "publish:minor": "node scripts/publish.js minor",
    "publish:major": "node scripts/publish.js major"
  },
  "keywords": [
    "sqlite",
    "backup",
    "sync",
    "cloud",
    "google-drive",
    "database",
    "offline-first",
    "electron",
    "react-native"
  ],
  "author": "1291pravin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1291pravin/sqlite-cloud-backup.git"
  },
  "bugs": {
    "url": "https://github.com/1291pravin/sqlite-cloud-backup/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "googleapis": "^134.0.0",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
